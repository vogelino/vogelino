{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "extends": ["biome-config-astro"],
  "linter": {
    "ignore": [
      "node_modules",
      "dist",
      "data",
      ".vscode",
      "public",
      ".github",
      "types.d.ts"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUnusedTemplateLiteral": "off",
        "noNonNullAssertion": "off",
        "useSelfClosingElements": "off"
      },
      "correctness": {
        "useJsxKeyInIterable": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}

---
import { aboutFrontmatter } from '../parsedContents/about'
import classNames from '../utils/classNames'
import CVTableRow from './CVTableRow.astro'
---

<dl
	aria-label="Personal information"
	class={classNames(
		`grid @xs/sidebar:grid-cols-[2fr,3fr]`,
		`@sm/sidebar:grid-cols-[auto,1fr]`,
		`border-b border-grayMed text-lg`,
	)}
>
	{
		Object.entries(aboutFrontmatter.basicInfo).map(([key, value]) => (
			<CVTableRow title={key} value={value} />
		))
	}
</dl>

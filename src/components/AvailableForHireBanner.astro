<style is:global>
	header[aria-label='Main header']:not(.scrolled-top) .available-for-hire {
		@apply -translate-y-full;
	}

	.animated-banner {
		animation: banner 100s linear infinite;
		@apply motion-reduce:animate-none;
		will-change: transform;
	}

	@keyframes banner {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-50%);
		}
	}
</style>

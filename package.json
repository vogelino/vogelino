{
  "name": "vogelino",
  "description": "Lucas Vogel's (Vogelino) 2024 online portfolio",
  "private": true,
  "scripts": {
    "dev": "TAILWIND_MODE=watch astro dev",
    "start": "astro dev",
    "build": "if [ \"$BUILD_TYPE\" = \"webhook\" ]; then npm run build-webhook; else npm run build-regular; fi",
    "build-regular": "bun run code-qa && astro build",
    "build-webhook": "bun run code-qa && bun run downloadInspirations && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "astro check",
    "downloadInspirations": "bun scripts/downloadInspirations.ts",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --apply",
    "lint:fix:unsafe": "biome lint . --apply-unsafe",
    "code-qa": "bun run type-check && bun run format && bun run lint:fix"
  },
  "devDependencies": {
    "@astrojs/check": "0.5.10",
    "@astrojs/mdx": "2.3.1",
    "@astrojs/rss": "4.0.5",
    "@astrojs/sitemap": "3.1.3",
    "@astrojs/tailwind": "5.1.0",
    "@astrojs/ts-plugin": "1.6.1",
    "@biomejs/biome": "1.7.0",
    "@notionhq/client": "2.2.14",
    "@tailwindcss/container-queries": "0.1.1",
    "@types/marked": "4.0.7",
    "@types/node-fetch": "2.6.11",
    "@types/sharp": "0.30.5",
    "astro": "4.6.2",
    "autoprefixer": "10.4.14",
    "biome-config-astro": "1.1.0",
    "dotenv": "16.0.2",
    "node-fetch": "2.6.7",
    "postcss": "8.4.33",
    "sharp": "0.33.2",
    "slugify": "1.6.5",
    "tailwindcss": "3.3.6",
    "tailwindcss-touch": "1.0.1",
    "ts-node": "10.8.0",
    "typescript": "5.2.2",
    "zod": "3.22.4"
  },
  "dependencies": {
    "@playform/inline": "0.0.2",
    "@sentry/astro": "^7.110.1",
    "@splidejs/splide": "4.1.4",
    "@vercel/analytics": "1.2.2",
    "@vercel/speed-insights": "1.0.10",
    "photoswipe": "5.4.3"
  }
}